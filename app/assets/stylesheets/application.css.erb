 body {
    background-image: url(<%= image_path 'weather_bg.png' %>);
    font-family: Arial, Helvetica, sans-serif;
    background-color:rgba(0, 0, 0, 0.5);
 }

 .main {
    display: flex;
    justify-content: center;
 }

 .page-logo {
    display: flex;
    justify-content: center;
    margin: 25px;
 }

 .logo-container {
    width: fit-content;
    background: white;
    border-radius: 25px;
    padding: 25px;
 }

 img.logo {
    width: 600px;
    height: auto;
}

 .container {
    background: white;
    border-radius: 25px;
    justify-content: center;
    padding: 25px;
    text-align: center;
 }

.form-title {
    margin: 25px;
    padding-top: 10px;
    color: #65bae7;
 }

form {
    margin: 25px;
    padding-bottom: 25px;
    font-size: 18px;
 }

input {
    margin: 10px 0px 10px;
    border-radius: 5px;
}

.zip {
    color: #65bae7;
    padding: none;
    margin: 5px;
}

.btn {
    padding: 5px;
    background-color: #65bae7;
    border-radius: 5px;
    color: white;
    border-color: pink;
    width: 50%;
}
